{
    "$schema": "https://turbo.build/schema.json",
    "ui": "stream",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "ts": {
            "dependsOn": ["^ts"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "format": {
            "cache": false,
            "persistent": true,
            "inputs": ["$TURBO_DEFAULT$", ".prettierrc.json", ".prettierrc"]
        }
    }
}
